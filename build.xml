<project name="POS" default="build" basedir=".">

	<property file="src/res/application.properties" />
	<property name="Main" value="ee.ut.math.tvt.teamDefault.Intro"/>

	<path id="compile.classpath">
		<fileset dir="./lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<path id="classpath">
		<fileset dir="lib" includes="**/*.jar" />
	</path>

	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="build" depends="clean">
		<mkdir dir="build/classes" />
		<javac srcdir="src" destdir="build/classes"
	    		debug="true"
	    		debuglevel="lines,vars,source"
	    		encoding="utf-8"
	    		compiler="modern"
	    		target="1.7"
	    		source="1.7"
	    		includeantruntime="false">
			<classpath refid="compile.classpath" />
		</javac>
	</target>
	
	<target name="run" depends="build">
		<java classname="ee.ut.math.tvt.teamDefault.Intro" fork="true"/>
	</target>

	<target name="dist" depends="build">
		<mkdir dir="build/jar" />
		<jar destfile="build/jar/${teamName}.jar" basedir="build/jar">
			<zipgroupfileset dir="./lib" includes="**/*.jar" />
						<manifest>
							<attribute name="Main-Class" value="${Main}"/>
						</manifest>
		</jar>
	</target>
	
	<target name="jrun">
		<java jar="build/jar/${teamName}.jar" fork="true"/>
	</target>

</project>