<project name="POS" basedir=".">

	<property name="lib.dir" value="lib" />

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar" />
	</path>

	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="build" depends="clean">
		<mkdir dir="build/classes" />
		<javac srcdir="src" destdir="build/classes" classpathref="classpath" />
	</target>

	<target name="jar" depends="build">
		<mkdir dir="build/jar" />
		<jar destfile="build/jar/POS.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="ee.ut.math.tvt.teamDefault.Intro" />
			</manifest>
		</jar>
	</target>
	
	<target name="run" depends="jar">
		<java fork="true" classname="ee.ut.math.tvt.teamDefault.Intro">
			<classpath>
				<path refid="classpath"/>
				<path location="build/jar/POS.jar"/>
			</classpath>
		</java>
	</target>


</project>